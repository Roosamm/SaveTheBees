<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/hive"
            app:srcCompat="@drawable/beehive" />

        <TextView
            android:textColor="@color/secondary"
            android:id="@+id/developersTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="@string/developersTxt"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:textColor="@color/secondary"
            android:id="@+id/names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/names"
            android:textSize="16sp" />

        <TextView
            android:textColor="@color/secondary"
            android:id="@+id/arModels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/arMmodels"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:textColor="@color/secondary"
            android:id="@+id/maker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maker"
            android:textSize="16sp" />

        <TextView
            android:textColor="@color/secondary"
            android:id="@+id/icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/icons"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:textColor="@color/secondary"
            android:id="@+id/maker3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maker3"
            android:textSize="16sp" />

        <TextView
            android:textColor="@color/secondary"
            android:id="@+id/maker4"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="@string/maker4"
            android:textAlignment="center"
            android:textSize="16sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>